# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# Option 1: SQLite (default, no setup required)
DATABASE_URL=sqlite:///./trademate.db

# Option 2: MongoDB Atlas (recommended for production)
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/trademate?retryWrites=true&w=majority

# Option 3: PostgreSQL (local or cloud)
# DATABASE_URL=postgresql://username:password@localhost:5432/trademate

# Option 4: MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/trademate

# Database Type (sqlite, mongodb, postgresql, mysql)
DATABASE_TYPE=sqlite

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000 